<?xml version="1.0" encoding="UTF-8"?>
<awkhad>

    <!-- Remove "Create a free website with Awkhad" -->
    <template id="layout_footer_copyright"
              inherit_id="website.brand_promotion"
              customize_show="True"
              name="Remove Awkhad Promotional Link"
              priority="20">
        <xpath expr="//div[hasclass('o_brand_promotion')]" position="replace">
            <div class="o_brand_promotion"/>
        </xpath>
    </template>

</awkhad>
